{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Resource Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.resource_service.main:app",
                "--reload",
                "--host", "localhost",
                "--port", "8005"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend/resource_service"
        },
        {
            "name": "Debug Customer Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",  // Thay v√¨ "backend.resource_service.main:app"
                "--reload",
                "--host", "localhost",
                "--port", "8006"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend/customer_service"
        },
        {
            "name": "Debug Auth Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.auth_service.main:app",
                "--reload",
                "--host", "0.0.0.0", 
                "--port", "8002"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend/auth_service"
        },
        {
            "name": "Debug Customer Service Main",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host", "localhost",
                "--port", "9001"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend/customer_service"
        },
        {
            "name": "Debug All Services (Compound)",
            "configurations": [
                "Debug Resource Service",
                "Debug Customer Service",
                "Debug Auth Service"
            ],
            "presentation": {
                "hidden": false,
                "group": "Services",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug All Services",
            "configurations": [
                "Debug Resource Service",
                "Debug Customer Service",
                "Debug Auth Service",
                "Debug Customer Service Main"
            ],
            "presentation": {
                "hidden": false,
                "group": "Services",
                "order": 1
            },
            "stopAll": true
        }
    ]
}